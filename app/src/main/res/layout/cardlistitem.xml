<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cvitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="#7FFFFFFF"
            android:padding="5dp">

            <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/tvtaskcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:textSize="45sp"
                android:textStyle="bold"


                />

            <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/tvtagcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvtaskcard"
                android:textColor="#FF000000"
                android:textSize="30sp" />

            <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/tvpointscard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvtagcard"
                android:textColor="#FF000000"
                android:textSize="25sp" />

            <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/dateaddedtvcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvpointscard"
                android:text="{cmd_calendar_plus}"
                android:textColor="#FF000000"
                android:textSize="15sp"
                android:textStyle="bold|italic" />

            <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/datependingtvcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateaddedtvcard"
                android:text="{cmd_calendar_clock}"
                android:textColor="#FF000000"
                android:textSize="15sp"
                android:textStyle="bold|italic" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/datependingtvcard"
                android:animateLayoutChanges="true">

            <com.mikepenz.iconics.view.IconicsButton
                android:id="@+id/btndonecard"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:clickable="true"
                android:text="{cmd_check} Done"
                android:textColor="#FF000000"
                android:textSize="20sp"

                android:visibility="gone" />

                <com.mikepenz.iconics.view.IconicsButton
                android:id="@+id/btndeletecard"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"

                android:layout_toLeftOf="@+id/btndonecard"
                android:clickable="true"
                android:text="{cmd_delete_forever} Delete"
                android:textColor="#FF000000"
                android:textSize="20sp"
                android:visibility="gone" />

                <com.mikepenz.iconics.view.IconicsButton
                    android:id="@+id/downbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="{cmd_chevron_double_down}" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>